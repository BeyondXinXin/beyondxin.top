---
import Link from '~/components/base/Link.astro'
import { ensureTrailingSlash } from '~/utils/common'

const pathSegments = ensureTrailingSlash(Astro.url.pathname)
  .split('/')
  .filter(segment => segment !== '')
const href = pathSegments.includes('blog') ? '/blog/' : '/'
---

<span class="font-mono op-50">&gt; </span>
<Link class="font-mono op-50! hover:op-75!" {href}>cd ..</Link>
